<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:fontFamily">@font/nanum_square_bold</item> <!-- 기본 폰트 설정 -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="allergy_icon_frame">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:elevation">1dp</item>
        <item name="layout_constraintHeight_percent">0.6</item>
        <item name="layout_constraintDimensionRatio">1:1</item>
        <item name="android:src">@drawable/black_circle</item>
        <item name="android:tint">@color/main_color_orange</item>
        <item name="layout_constraintBottom_toBottomOf">@+id/layout_horizontal_scrollview</item>
        <item name="layout_constraintTop_toTopOf">@+id/layout_horizontal_scrollview</item>
    </style>

    <style name="allergy_icon">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:src">@drawable/shrimp</item>
        <item name="android:padding">8dp</item>
        <item name="android:elevation">2dp</item>
        <item name="android:tint">@color/white</item>
    </style>

    <style name="textStyle_title">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/nanum_square_ac_extrabold</item>
    </style>

    <style name="textStyle_subtitle">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/nanum_square_ac_bold</item>
    </style>

    <style name="textStyle_subheading">
        <item name="android:textColor">@color/main_color_dark_gray</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/nanum_square_ac_regular</item>
    </style>

    <style name="textStyle_detail">
        <item name="android:textColor">@color/main_color_dark_gray</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/nanum_square_ac_light</item>
    </style>
</resources>