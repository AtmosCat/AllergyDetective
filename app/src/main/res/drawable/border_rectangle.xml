<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 상단 테두리 -->
    <item>
        <shape android:shape="rectangle">
            <size android:height="2dp"/> <!-- 상단 테두리 두께 -->
            <solid android:color="@android:color/transparent"/> <!-- 투명 배경 -->
            <stroke
                android:width="1dp"
                android:color="@color/main_color_more_light_gray"/> <!-- 상단 테두리 색상 -->
        </shape>
    </item>
    <!-- 하단 테두리 -->
    <item android:bottom="2dp">
        <shape android:shape="rectangle">
            <size android:height="2dp"/> <!-- 하단 테두리 두께 -->
            <solid android:color="@android:color/transparent"/> <!-- 투명 배경 -->
            <stroke
                android:width="1dp"
                android:color="@color/main_color_more_light_gray"/> <!-- 하단 테두리 색상 -->
        </shape>
    </item>
    <!-- 본문 배경 -->
    <item android:bottom="2dp" android:top="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white"/> <!-- 배경색 -->
        </shape>
    </item>
</layer-list>
