<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.signup.SignUpFragment"
    android:background="@color/white">

    <TextView
        android:id="@+id/tv_signup_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="회원가입"
        style="@style/textStyle_title"
        android:layout_marginTop="150dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <EditText
        android:id="@+id/et_signup_email"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/round_border"
        android:inputType="text"
        android:layout_marginTop="40dp"
        android:paddingLeft="90dp"
        style="@style/textStyle_detail"
        app:layout_constraintHeight_percent="0.06"
        app:layout_constraintStart_toStartOf="@+id/tv_signup_main"
        app:layout_constraintTop_toBottomOf="@+id/tv_signup_main"
        app:layout_constraintEnd_toEndOf="@+id/tv_signup_main"
        app:layout_constraintWidth_percent="0.75" />

    <TextView
        android:id="@+id/tv_signup_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이메일*"
        android:layout_marginLeft="15dp"
        style="@style/textStyle_subheading"
        android:elevation="2dp"
        app:layout_constraintBottom_toBottomOf="@+id/et_signup_email"
        app:layout_constraintStart_toStartOf="@+id/et_signup_email"
        app:layout_constraintTop_toTopOf="@+id/et_signup_email" />

    <Button
        android:id="@+id/btn_signup_email_check"
        android:layout_width="65dp"
        android:layout_height="25dp"
        android:layout_marginRight="10dp"
        android:text="중복확인"
        android:textColor="@color/white"
        android:background="@color/main_color_light_gray"
        android:elevation="2dp"
        app:layout_constraintBottom_toBottomOf="@+id/et_signup_email"
        app:layout_constraintTop_toTopOf="@+id/et_signup_email"
        app:layout_constraintEnd_toEndOf="@+id/et_signup_email"
        />

    <EditText
        android:id="@+id/et_signup_pw"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/round_border"
        android:inputType="text"
        android:paddingLeft="90dp"
        style="@style/textStyle_detail"
        app:layout_constraintHeight_percent="0.06"
        app:layout_constraintStart_toStartOf="@+id/et_signup_email"
        app:layout_constraintTop_toBottomOf="@+id/et_signup_email"
        app:layout_constraintWidth_percent="0.75" />

    <TextView
        android:id="@+id/tv_signupPW"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="2dp"
        android:layout_marginLeft="15dp"
        android:text="비밀번호*"
        style="@style/textStyle_subheading"
        app:layout_constraintBottom_toBottomOf="@+id/et_signup_pw"
        app:layout_constraintStart_toStartOf="@+id/et_signup_pw"
        app:layout_constraintTop_toTopOf="@+id/et_signup_pw" />

    <EditText
        android:id="@+id/et_signup_pw_check"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/round_border"
        android:inputType="text"
        android:paddingLeft="90dp"
        style="@style/textStyle_detail"
        app:layout_constraintHeight_percent="0.06"
        app:layout_constraintStart_toStartOf="@+id/et_signup_pw"
        app:layout_constraintTop_toBottomOf="@+id/et_signup_pw"
        app:layout_constraintWidth_percent="0.75" />

    <TextView
        android:id="@+id/tv_signup_pw_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="2dp"
        android:layout_marginLeft="15dp"
        android:text="확인*"
        style="@style/textStyle_subheading"
        app:layout_constraintBottom_toBottomOf="@+id/et_signup_pw_check"
        app:layout_constraintStart_toStartOf="@+id/et_signup_pw_check"
        app:layout_constraintTop_toTopOf="@+id/et_signup_pw_check" />

    <Button
        android:id="@+id/btn_signup_pw_check"
        android:layout_width="65dp"
        android:layout_height="25dp"
        android:layout_marginRight="10dp"
        android:text="확인"
        android:textColor="@color/white"
        android:background="@color/main_color_light_gray"
        android:elevation="2dp"
        app:layout_constraintBottom_toBottomOf="@+id/et_signup_pw_check"
        app:layout_constraintTop_toTopOf="@+id/et_signup_pw_check"
        app:layout_constraintEnd_toEndOf="@+id/et_signup_pw_check"
        />

    <EditText
        android:id="@+id/et_signup_name"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/round_border"
        android:inputType="text"
        android:paddingLeft="90dp"
        style="@style/textStyle_detail"
        app:layout_constraintHeight_percent="0.06"
        app:layout_constraintStart_toStartOf="@+id/et_signup_pw_check"
        app:layout_constraintTop_toBottomOf="@+id/et_signup_pw_check"
        app:layout_constraintWidth_percent="0.75" />

    <TextView
        android:id="@+id/tv_signup_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="2dp"
        android:layout_marginLeft="15dp"
        android:text="이름"
        style="@style/textStyle_subheading"
        app:layout_constraintBottom_toBottomOf="@+id/et_signup_name"
        app:layout_constraintStart_toStartOf="@+id/et_signup_name"
        app:layout_constraintTop_toTopOf="@+id/et_signup_name" />

    <EditText
        android:id="@+id/et_signup_contact"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/round_border"
        android:inputType="text"
        android:paddingLeft="90dp"
        style="@style/textStyle_detail"
        app:layout_constraintHeight_percent="0.06"
        app:layout_constraintStart_toStartOf="@+id/et_signup_name"
        app:layout_constraintTop_toBottomOf="@+id/et_signup_name"
        app:layout_constraintWidth_percent="0.75" />

    <TextView
        android:id="@+id/tv_signup_contact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="2dp"
        android:layout_marginLeft="15dp"
        android:text="전화번호"
        style="@style/textStyle_subheading"
        app:layout_constraintBottom_toBottomOf="@+id/et_signup_contact"
        app:layout_constraintStart_toStartOf="@+id/et_signup_contact"
        app:layout_constraintTop_toTopOf="@+id/et_signup_contact" />

    <EditText
        android:id="@+id/et_signup_nickname"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/round_border"
        android:inputType="text"
        android:paddingLeft="90dp"
        style="@style/textStyle_detail"
        app:layout_constraintHeight_percent="0.06"
        app:layout_constraintStart_toStartOf="@+id/et_signup_contact"
        app:layout_constraintTop_toBottomOf="@+id/et_signup_contact"
        app:layout_constraintWidth_percent="0.75" />

    <TextView
        android:id="@+id/tv_signup_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="2dp"
        android:layout_marginLeft="15dp"
        android:text="닉네임"
        style="@style/textStyle_subheading"
        app:layout_constraintBottom_toBottomOf="@+id/et_signup_nickname"
        app:layout_constraintStart_toStartOf="@+id/et_signup_nickname"
        app:layout_constraintTop_toTopOf="@+id/et_signup_nickname" />

    <CheckBox
        android:id="@+id/checkBox_signup_privacy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="개인정보 제공 동의"
        style="@style/textStyle_detail"
        android:layout_marginTop="3dp"
        app:layout_constraintEnd_toEndOf="@+id/et_signup_nickname"
        app:layout_constraintTop_toBottomOf="@+id/et_signup_nickname" />

    <Button
        android:id="@+id/btn_signup_signup"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/round_border"
        android:backgroundTint="@color/main_color_orange"
        android:text="회원가입"
        android:textColor="@color/white"
        style="@style/textStyle_subtitle"
        android:layout_marginTop="70dp"
        app:layout_constraintEnd_toEndOf="@+id/et_signup_nickname"
        app:layout_constraintHeight_percent="0.06"
        app:layout_constraintStart_toStartOf="@+id/et_signup_nickname"
        app:layout_constraintTop_toBottomOf="@+id/et_signup_nickname"
        app:layout_constraintWidth_percent="0.75" />

    <Button
        android:id="@+id/btn_signup_cancel"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/round_border"
        android:backgroundTint="@color/main_color_light_gray"
        android:text="취소"
        android:textColor="@color/white"
        style="@style/textStyle_subtitle"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="@+id/btn_signup_signup"
        app:layout_constraintHeight_percent="0.06"
        app:layout_constraintStart_toStartOf="@+id/btn_signup_signup"
        app:layout_constraintTop_toBottomOf="@+id/btn_signup_signup"
        app:layout_constraintWidth_percent="0.75" />


</androidx.constraintlayout.widget.ConstraintLayout>