<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background_color"
    tools:context=".presentation.mypage.favorite.FavoriteFragment">

    <ImageView
        android:id="@+id/btn_back"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="25dp"
        app:layout_constraintHeight_percent="0.05"
        app:layout_constraintWidth_percent="0.08"
        android:src="@drawable/back"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/tv_favorite_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nanum_square_extrabold"
        android:text="관심목록"
        android:textColor="@color/main_color_dark_gray"
        android:textSize="20sp"
        android:layout_marginStart="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/btn_back"
        app:layout_constraintStart_toEndOf="@+id/btn_back"
        app:layout_constraintTop_toTopOf="@+id/btn_back" />

    <ImageView
        android:id="@+id/btn_update"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/update"
        android:layout_marginEnd="7dp"
        android:padding="7dp"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintTop_toTopOf="@+id/btn_back"
        app:layout_constraintBottom_toBottomOf="@+id/btn_back"
        app:layout_constraintEnd_toEndOf="parent"
        />

<!--    <TextView-->
<!--        android:id="@+id/tv_update_button"-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:text="새로고침"-->
<!--        android:textSize="16sp"-->
<!--        android:textColor="@color/main_color_dark_gray"-->
<!--        app:layout_constraintTop_toTopOf="@+id/iv_update_button"-->
<!--        app:layout_constraintBottom_toBottomOf="@+id/iv_update_button"-->
<!--        app:layout_constraintEnd_toEndOf="parent"-->
<!--        android:layout_marginEnd="18dp"-->
<!--        />-->

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview_favorite_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        tools:itemCount="1"
        tools:listitem="@layout/recyclerview_itemlist"
        app:layout_constraintTop_toBottomOf="@+id/tv_favorite_list"
        />

</androidx.constraintlayout.widget.ConstraintLayout>