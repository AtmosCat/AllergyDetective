<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.filter.FilterFragment">


    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="1dp"
        android:background="#000000"
        android:alpha="0.7"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="2dp"
        android:layout_marginVertical="120dp"
        android:layout_marginHorizontal="20dp"
        android:background="@color/white">

    <ScrollView
        android:id="@+id/scrollview_filter"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/btn_apply_filter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >


            <ImageView
                android:id="@+id/btn_back"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:src="@drawable/back"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:tint="@color/main_color_dark_gray" />

            <TextView
                android:id="@+id/tv_filter_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="검색 카테고리"
                style="@style/textStyle_title"
                android:layout_marginTop="20dp"
                app:layout_constraintWidth_percent="0.2"
                app:layout_constraintHeight_percent="0.6"
                app:layout_constraintStart_toStartOf="@id/btn_back"
                app:layout_constraintTop_toBottomOf="@id/btn_back"
                />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_custom_buttons"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_filter_category"
                >

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.33" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.66" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="1" />

            <Button
                android:id="@+id/customButton1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginHorizontal="5dp"
                android:layout_marginVertical="5dp"
                style="@style/textStyle_subheading"
                app:layout_constraintStart_toStartOf="@+id/guideline1"
                app:layout_constraintEnd_toEndOf="@+id/guideline2"
                app:layout_constraintTop_toTopOf="@+id/layout_custom_buttons"
                android:text="과자/간식류"
                />

            <Button
                android:id="@+id/customButton2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginHorizontal="5dp"
                style="@style/textStyle_subheading"
                app:layout_constraintStart_toStartOf="@+id/guideline2"
                app:layout_constraintEnd_toEndOf="@+id/guideline3"
                app:layout_constraintBottom_toBottomOf="@+id/customButton1"
                app:layout_constraintTop_toTopOf="@+id/customButton1"
                android:text="즉석식품류"
                />

            <Button
                android:id="@+id/customButton3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginHorizontal="5dp"
                style="@style/textStyle_subheading"
                app:layout_constraintStart_toStartOf="@+id/guideline3"
                app:layout_constraintEnd_toEndOf="@+id/guideline4"
                app:layout_constraintBottom_toBottomOf="@+id/customButton1"
                app:layout_constraintTop_toTopOf="@+id/customButton1"
                android:text="음료/커피류"
                />

            <Button
                android:id="@+id/customButton4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginHorizontal="5dp"
                style="@style/textStyle_subheading"
                android:layout_marginVertical="5dp"
                app:layout_constraintStart_toStartOf="@+id/guideline1"
                app:layout_constraintEnd_toEndOf="@+id/guideline2"
                app:layout_constraintTop_toBottomOf="@+id/customButton1"
                android:text="라면/면류"
                />

            <Button
                android:id="@+id/customButton5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginHorizontal="5dp"
                style="@style/textStyle_subheading"
                app:layout_constraintStart_toStartOf="@+id/guideline2"
                app:layout_constraintEnd_toEndOf="@+id/guideline3"
                app:layout_constraintBottom_toBottomOf="@+id/customButton4"
                app:layout_constraintTop_toTopOf="@+id/customButton4"
                android:text="빙과류"
                />

            <Button
                android:id="@+id/customButton6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginHorizontal="5dp"
                style="@style/textStyle_subheading"
                app:layout_constraintStart_toStartOf="@+id/guideline3"
                app:layout_constraintEnd_toEndOf="@+id/guideline4"
                app:layout_constraintBottom_toBottomOf="@+id/customButton4"
                app:layout_constraintTop_toTopOf="@+id/customButton4"
                android:text="빵/쿠키류"
                />

            <Button
                android:id="@+id/customButton7"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginHorizontal="5dp"
                style="@style/textStyle_subheading"
                android:layout_marginVertical="5dp"
                app:layout_constraintStart_toStartOf="@+id/guideline1"
                app:layout_constraintEnd_toEndOf="@+id/guideline2"
                app:layout_constraintTop_toBottomOf="@+id/customButton4"
                android:text="유제품류"
                />

            <Button
                android:id="@+id/customButton8"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginHorizontal="5dp"
                style="@style/textStyle_subheading"
                app:layout_constraintStart_toStartOf="@+id/guideline2"
                app:layout_constraintEnd_toEndOf="@+id/guideline3"
                app:layout_constraintBottom_toBottomOf="@+id/customButton7"
                app:layout_constraintTop_toTopOf="@+id/customButton7"
                android:text="육가공품류"
                />

            <Button
                android:id="@+id/customButton9"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginHorizontal="5dp"
                style="@style/textStyle_subheading"
                app:layout_constraintStart_toStartOf="@+id/guideline3"
                app:layout_constraintEnd_toEndOf="@+id/guideline4"
                app:layout_constraintBottom_toBottomOf="@+id/customButton7"
                app:layout_constraintTop_toTopOf="@+id/customButton7"
                android:text="양념/소스류"
                />

            <Button
                android:id="@+id/customButton10"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginHorizontal="5dp"
                style="@style/textStyle_subheading"
                android:layout_marginVertical="5dp"
                app:layout_constraintStart_toStartOf="@+id/guideline1"
                app:layout_constraintEnd_toEndOf="@+id/guideline2"
                app:layout_constraintTop_toBottomOf="@+id/customButton7"
                android:text="조미료류"
                />

            <Button
                android:id="@+id/customButton11"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginHorizontal="5dp"
                style="@style/textStyle_subheading"
                app:layout_constraintStart_toStartOf="@+id/guideline2"
                app:layout_constraintEnd_toEndOf="@+id/guideline3"
                app:layout_constraintBottom_toBottomOf="@+id/customButton10"
                app:layout_constraintTop_toTopOf="@+id/customButton10"
                android:text="잼/시럽류"
                />

            <Button
                android:id="@+id/customButton12"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginHorizontal="5dp"
                style="@style/textStyle_subheading"
                app:layout_constraintStart_toStartOf="@+id/guideline3"
                app:layout_constraintEnd_toEndOf="@+id/guideline4"
                app:layout_constraintBottom_toBottomOf="@+id/customButton10"
                app:layout_constraintTop_toTopOf="@+id/customButton10"
                android:text="기타"
                />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                android:id="@+id/view_underline_category"
                android:layout_width="330dp"
                android:layout_height="1dp"
                android:layout_marginTop="20dp"
                android:background="@color/main_color_light_gray"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/layout_custom_buttons"
                />

            <TextView
                android:id="@+id/tv_filter_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="그룹 멤버"
                android:layout_marginTop="20dp"
                style="@style/textStyle_title"
                app:layout_constraintWidth_percent="0.2"
                app:layout_constraintHeight_percent="0.6"
                app:layout_constraintStart_toStartOf="@id/btn_back"
                app:layout_constraintTop_toBottomOf="@+id/view_underline_category"
                />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_group_members"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_filter_group"
                >

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/group_guideline1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.0" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/group_guideline2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.2" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/group_guideline3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.4" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/group_guideline4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.6" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/group_guideline5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.8" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/group_guideline6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="1.0" />

                <View
                    android:id="@+id/view_no_members"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:background="@color/white"
                    android:elevation="3dp"
                    android:alpha="0.75"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    />

                <TextView
                    android:id="@+id/tv_no_members"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:text="추가된 그룹 멤버가 없습니다."
                    android:elevation="3dp"
                    android:gravity="center"
                    android:textSize="18sp"
                    style="@style/textStyle_subtitle"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layout_member1"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintDimensionRatio="1:1"
                    app:layout_constraintWidth_percent="0.16"
                    app:layout_constraintTop_toTopOf="@+id/layout_group_members"
                    app:layout_constraintStart_toStartOf="@+id/group_guideline1"
                    app:layout_constraintEnd_toEndOf="@+id/group_guideline2"
                    >

                    <ImageView
                        android:id="@+id/iv_no_group_member1"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:src="@drawable/no_member"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:tint="@color/main_color_more_light_gray"
                        />

                    <ImageView
                        android:id="@+id/iv_added_group_member1"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:src="@drawable/group_member"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:tint="@color/main_color_more_light_gray"
                        android:visibility="gone"
                        />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <EditText
                    android:id="@+id/tv_group_member1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="없음"
                    android:letterSpacing="-0.07"
                    android:maxLines="2"
                    android:gravity="center"
                    android:enabled="false"
                    android:layout_marginTop="5dp"
                    style="@style/textStyle_detail"
                    app:layout_constraintEnd_toEndOf="@+id/layout_member1"
                    app:layout_constraintStart_toStartOf="@+id/layout_member1"
                    app:layout_constraintTop_toBottomOf="@+id/layout_member1" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layout_member2"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintDimensionRatio="1:1"
                    app:layout_constraintWidth_percent="0.16"
                    app:layout_constraintTop_toTopOf="@+id/layout_group_members"
                    app:layout_constraintStart_toStartOf="@+id/group_guideline2"
                    app:layout_constraintEnd_toEndOf="@+id/group_guideline3"
                    >

                    <ImageView
                        android:id="@+id/iv_no_group_member2"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:src="@drawable/no_member"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:tint="@color/main_color_more_light_gray"
                        />
                    <ImageView
                        android:id="@+id/iv_added_group_member2"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:src="@drawable/group_member"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:tint="@color/main_color_more_light_gray"
                        android:visibility="gone"
                        />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <EditText
                    android:id="@+id/tv_group_member2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="없음"
                    android:letterSpacing="-0.07"
                    android:maxLines="2"
                    android:gravity="center"
                    android:enabled="false"
                    android:layout_marginTop="5dp"
                    style="@style/textStyle_detail"
                    app:layout_constraintEnd_toEndOf="@+id/layout_member2"
                    app:layout_constraintStart_toStartOf="@+id/layout_member2"
                    app:layout_constraintTop_toBottomOf="@+id/layout_member2" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layout_member3"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintDimensionRatio="1:1"
                    app:layout_constraintWidth_percent="0.16"
                    app:layout_constraintTop_toTopOf="@+id/layout_group_members"
                    app:layout_constraintStart_toStartOf="@+id/group_guideline3"
                    app:layout_constraintEnd_toEndOf="@+id/group_guideline4"
                    >

                    <ImageView
                        android:id="@+id/iv_no_group_member3"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:src="@drawable/no_member"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:tint="@color/main_color_more_light_gray"
                        />
                    <ImageView
                        android:id="@+id/iv_added_group_member3"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:src="@drawable/group_member"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:tint="@color/main_color_more_light_gray"
                        android:visibility="gone"
                        />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <EditText
                    android:id="@+id/tv_group_member3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="없음"
                    android:letterSpacing="-0.07"
                    android:maxLines="2"
                    android:gravity="center"
                    android:enabled="false"
                    android:layout_marginTop="5dp"
                    style="@style/textStyle_detail"
                    app:layout_constraintEnd_toEndOf="@+id/layout_member3"
                    app:layout_constraintStart_toStartOf="@+id/layout_member3"
                    app:layout_constraintTop_toBottomOf="@+id/layout_member3" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layout_member4"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintDimensionRatio="1:1"
                    app:layout_constraintWidth_percent="0.16"
                    app:layout_constraintTop_toTopOf="@+id/layout_group_members"
                    app:layout_constraintStart_toStartOf="@+id/group_guideline4"
                    app:layout_constraintEnd_toEndOf="@+id/group_guideline5"
                    >

                    <ImageView
                        android:id="@+id/iv_no_group_member4"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:src="@drawable/no_member"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:tint="@color/main_color_more_light_gray"
                        />
                    <ImageView
                        android:id="@+id/iv_added_group_member4"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:src="@drawable/group_member"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:tint="@color/main_color_more_light_gray"
                        android:visibility="gone"
                        />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <EditText
                    android:id="@+id/tv_group_member4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="없음"
                    android:letterSpacing="-0.07"
                    android:maxLines="2"
                    android:gravity="center"
                    android:enabled="false"
                    android:layout_marginTop="5dp"
                    style="@style/textStyle_detail"
                    app:layout_constraintEnd_toEndOf="@+id/layout_member4"
                    app:layout_constraintStart_toStartOf="@+id/layout_member4"
                    app:layout_constraintTop_toBottomOf="@+id/layout_member4" />


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layout_member5"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintDimensionRatio="1:1"
                    app:layout_constraintWidth_percent="0.16"
                    app:layout_constraintTop_toTopOf="@+id/layout_group_members"
                    app:layout_constraintStart_toStartOf="@+id/group_guideline5"
                    app:layout_constraintEnd_toEndOf="@+id/group_guideline6"
                    >

                    <ImageView
                        android:id="@+id/iv_no_group_member5"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:src="@drawable/no_member"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:tint="@color/main_color_more_light_gray"
                        />
                    <ImageView
                        android:id="@+id/iv_added_group_member5"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:src="@drawable/group_member"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:tint="@color/main_color_more_light_gray"
                        android:visibility="gone"
                        />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <EditText
                    android:id="@+id/tv_group_member5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="없음"
                    android:letterSpacing="-0.07"
                    android:maxLines="2"
                    android:gravity="center"
                    android:enabled="false"
                    android:layout_marginTop="5dp"
                    style="@style/textStyle_detail"
                    app:layout_constraintEnd_toEndOf="@+id/layout_member5"
                    app:layout_constraintStart_toStartOf="@+id/layout_member5"
                    app:layout_constraintTop_toBottomOf="@+id/layout_member5" />

            </androidx.constraintlayout.widget.ConstraintLayout>


            <View
                android:id="@+id/view_underline_group"
                android:layout_width="330dp"
                android:layout_height="1dp"
                android:layout_marginTop="20dp"
                android:background="@color/main_color_light_gray"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/layout_group_members"
                />

            <TextView
                android:id="@+id/tv_filter_ingredients"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="알러지유발물질"
                android:layout_marginTop="20dp"
                style="@style/textStyle_title"
