                app:layout_constraintTop_toTopOf="@+id/iv_my_allergy_frame8"
                app:layout_constraintBottom_toBottomOf="@+id/iv_my_allergy_frame8"
                app:layout_constraintStart_toStartOf="@+id/iv_my_allergy_frame8"
                />

            <ImageView
                android:id="@+id/iv_my_allergy_frame9"
                style="@style/allergy_icon_frame"
                android:layout_marginStart="5dp"
                app:layout_constraintStart_toEndOf="@+id/iv_my_allergy_frame8"
                />

            <ImageView
                android:id="@+id/iv_my_allergy9"
                style="@style/allergy_icon"
                app:layout_constraintEnd_toEndOf="@+id/iv_my_allergy_frame9"
                app:layout_constraintTop_toTopOf="@+id/iv_my_allergy_frame9"
                app:layout_constraintBottom_toBottomOf="@+id/iv_my_allergy_frame9"
                app:layout_constraintStart_toStartOf="@+id/iv_my_allergy_frame9"
                />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </HorizontalScrollView>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/btn_tab_home"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout_hot_topic" />

    <ImageView
        android:id="@+id/btn_scroll_up_empty"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/scroll_up_empty"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintWidth_percent="0.08"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/recyclerview"
        app:layout_constraintBottom_toBottomOf="@+id/recyclerview"
        app:tint="@color/main_color_light_gray"
        />

    <ImageView
        android:id="@+id/btn_scroll_up_filled"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/scroll_up_filled"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintWidth_percent="0.08"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@+id/recyclerview"
        app:layout_constraintBottom_toBottomOf="@+id/recyclerview"
        app:tint="@color/main_color_orange"
        />

    <Button
        android:id="@+id/btn_new_post"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="+ ê¸€ì“°ê¸°"
        android:background="@drawable/background_spinner"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:textSize="14sp"
        android:textColor="@color/white"
        app:layout_constraintDimensionRatio="2:1"
        app:layout_constraintWidth_percent="0.2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/btn_tab_mypage"
        />

    <ImageView
        android:id="@+id/btn_tab_home"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/main_color_orange"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_percent="0.31"
        android:src="@drawable/home"
        android:layout_margin="5dp"
        android:padding="25dp"
        app:tint="@color/white" />

    <ImageView
        android:id="@+id/btn_tab_community"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        android:background="@color/main_color_light_gray"
        android:padding="25dp"
        android:src="@drawable/community"
        app:tint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintStart_toEndOf="@+id/btn_tab_home"
        app:layout_constraintWidth_percent="0.32" />

    <ImageView
        android:id="@+id/btn_tab_mypage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        android:background="@color/main_color_orange"
        android:padding="25dp"
        android:src="@drawable/mypage"
        app:tint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintStart_toEndOf="@+id/btn_tab_community"
        app:layout_constraintWidth_percent="0.32" />


