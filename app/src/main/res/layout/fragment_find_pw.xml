    <TextView
        android:id="@+id/tv_find_pw_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="비밀번호 찾기"
        android:textStyle="bold"
        android:textSize="30sp"
        android:textColor="@color/main_color_dark_gray"
        android:layout_marginTop="150dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/tv_find_pw_explanation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이메일로 본인 확인 메일을 보내드립니다."
        android:textSize="14sp"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="@+id/tv_find_pw_main"
        app:layout_constraintTop_toBottomOf="@+id/tv_find_pw_main"
        app:layout_constraintEnd_toEndOf="@+id/tv_find_pw_main"
        />

    <EditText
        android:id="@+id/et_find_pw_name"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/round_border"
        android:inputType="text"
        android:layout_marginTop="40dp"
        android:paddingLeft="90dp"
        android:textColor="@color/main_color_dark_gray"
        android:textSize="16sp"
        android:text="example"
        app:layout_constraintHeight_percent="0.06"
        app:layout_constraintStart_toStartOf="@+id/tv_find_pw_explanation"
        app:layout_constraintTop_toBottomOf="@+id/tv_find_pw_explanation"
        app:layout_constraintEnd_toEndOf="@+id/tv_find_pw_explanation"
        app:layout_constraintWidth_percent="0.75" />

    <TextView
        android:id="@+id/tv_find_pw_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이름"
        android:layout_marginLeft="15dp"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/main_color_dark_gray"
        android:elevation="2dp"
        app:layout_constraintBottom_toBottomOf="@+id/et_find_pw_name"
        app:layout_constraintStart_toStartOf="@+id/et_find_pw_name"
        app:layout_constraintTop_toTopOf="@+id/et_find_pw_name" />

    <EditText
        android:id="@+id/et_find_pw_id"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/round_border"
        android:inputType="text"
        android:paddingLeft="90dp"
        android:textColor="@color/main_color_dark_gray"
        android:textSize="16sp"
        android:text="example"
        app:layout_constraintHeight_percent="0.06"
        app:layout_constraintStart_toStartOf="@+id/et_find_pw_name"
        app:layout_constraintTop_toBottomOf="@+id/et_find_pw_name"
        app:layout_constraintWidth_percent="0.75" />

    <TextView
        android:id="@+id/tv_find_pw_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="2dp"
        android:layout_marginLeft="15dp"
        android:text="아이디"
        android:textColor="@color/main_color_dark_gray"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/et_find_pw_id"
        app:layout_constraintStart_toStartOf="@+id/et_find_pw_id"
        app:layout_constraintTop_toTopOf="@+id/et_find_pw_id" />

    <EditText
        android:id="@+id/et_find_pw_email"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/round_border"
        android:inputType="text"
        android:paddingLeft="90dp"
        android:textColor="@color/main_color_dark_gray"
        android:textSize="16sp"
        android:text="example"
        app:layout_constraintHeight_percent="0.06"
        app:layout_constraintStart_toStartOf="@+id/et_find_pw_id"
        app:layout_constraintTop_toBottomOf="@+id/et_find_pw_id"
        app:layout_constraintWidth_percent="0.75" />

    <TextView
        android:id="@+id/tv_find_pw_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="2dp"
        android:layout_marginLeft="15dp"
        android:text="이메일"
        android:textColor="@color/main_color_dark_gray"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/et_find_pw_email"
        app:layout_constraintStart_toStartOf="@+id/et_find_pw_email"
        app:layout_constraintTop_toTopOf="@+id/et_find_pw_email" />

    <Button
        android:id="@+id/btn_find_pw"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/round_border"
        android:backgroundTint="@color/main_color_orange"
        android:text="아이디 찾기"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginTop="70dp"
        app:layout_constraintEnd_toEndOf="@+id/et_find_pw_email"
        app:layout_constraintHeight_percent="0.06"
        app:layout_constraintStart_toStartOf="@+id/et_find_pw_email"
        app:layout_constraintTop_toBottomOf="@+id/et_find_pw_email"
        app:layout_constraintWidth_percent="0.75" />

</androidx.constraintlayout.widget.ConstraintLayout>